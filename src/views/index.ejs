<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Content Extractor</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <div class="container">
    <h1>Content Extractor</h1>

    <!-- üìÑ Step: Module scraping -->

    <!-- PDF Generation Form -->
    <form action="/generate" method="POST" id="generateForm">
      <label for="modules">Module URLs (comma-separated):</label>
      <input type="text" name="modules" id="modules" required />

      <button type="submit">Generate PDF</button>
    </form>

    <!-- Preview Form (opens in new tab) -->
    <form action="/preview" method="POST" target="_blank" rel="noopener noreferrer" style="margin-top: 0.5rem;">
      <input type="hidden" name="modules" id="previewModules" />
      <button type="submit">Preview HTML</button>
    </form>

    <!-- Sync input value across forms -->
    <script>
      const moduleInput = document.getElementById('modules');
      const previewInput = document.getElementById('previewModules');

      // Sync whenever input changes
      moduleInput.addEventListener('input', () => {
        previewInput.value = moduleInput.value;
      });

      // Set initial value on page load
      previewInput.value = moduleInput.value;
    </script>

    <div style="margin-top: 2rem;">
      <a href="/login">üîê Not logged in? Log in to eLearning platform</a>
    </div>
  </div>
</body>
</html>
